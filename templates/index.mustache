{{# hascustomers }}
<div class="mb-3">
        <a href="/local/testimonial/view_testimonial.php" class="btn btn-success">
            {{# str }} viewtestimonials, local_testimonial {{/ str }}
        </a>
    </div>
    <table class="generaltable" id="crm-customers-table">
        <thead>
            <tr>
                <th>{{# str }} companyname, local_testimonial {{/ str }}</th>
                <th>{{# str }} primarycontact, local_testimonial {{/ str }}</th>
                <th>{{# str }} action, core {{/ str }}</th>
            </tr>
        </thead>
        <tbody>
            {{# customers }}
                <tr>
                    <td>{{ company }}</td>
                    <td>{{ primarycontact }}</td>
                    <td>{{# token_is_none }}
                            <a href="send_link.php?contactid={{ id }}&email={{ primaryemail }}&name={{ primarycontact }}" class="btn btn-primary">
                                {{# pix }} i/email, core {{/ pix }} {{# str }} sendlink, local_testimonial {{/ str }}
                            </a>
                        {{/ token_is_none }}                        
                        {{# token_is_sent }}
                            <span class="badge badge-info">{{# str }} linksent, local_testimonial {{/ str }}</span>
                            <a href="expire_link.php?contactid={{ id }}" class="btn btn-warning btn-sm" title="{{#str}}expirelink, local_testimonial{{/str}}">
                                {{# pix }} i/expire, core {{/ pix }}
                            </a>
                        {{/ token_is_sent }}
                        {{# token_is_used }}
                            <span class="badge badge-success">{{# str }} linkused, local_testimonial {{/ str }}</span>
                        {{/ token_is_used }}
                        {{# token_is_expired }}
                            <span class="badge badge-secondary">{{# str }} linkexpired, local_testimonial {{/ str }}</span>
                            <a href="send_link.php?contactid={{ id }}&email={{ primaryemail }}&name={{ primarycontact }}" class="btn btn-primary btn-sm" title="{{#str}}sendlink, local_testimonial{{/str}}">
                                {{# pix }} t/reload, core {{/ pix }}
                            </a>
                        {{/ token_is_expired }}
                    </td>
                </tr>
            {{/ customers }}
        </tbody>
    </table>
{{/ hascustomers }}
{{{ pagination }}}
{{^ hascustomers }}
    {{> core/notification_info }}
{{/ hascustomers }}